<html>
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@1,500&display=swap" rel="stylesheet">
      <style>
      * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    }
    body {
        background-color: #012639;
    }

    .hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #060b21;
        z-index: -1;
    }

    #Logo {
        grid-column: 2/3;
        font-size: 2em;
        color: white;
        margin-top: 0.7rem;
        width: 90%;
        text-align: center;
    }

    .hamburger {
        justify-self: end;
    }

    nav {
        display: grid;
        grid-template-columns:10% 1fr 1fr 10%;
        min-height: 16vh;
        color: #13376b;
    }

    section {
        display: flex;
        height: 80vh;
        justify-content: center;
        align-items: center;
        background: #03598b;
    }

    .hero {
        height: 100%;
        width: 100%;
        position: relative;
    }

    .hero::after {
        content: "";
        background: rgb(0, 0, 0);
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0.4;
    }

    .headline {
        position: absolute;
        top: 70%;
        left: 10%;
        font-size: 1.1em;
        transform: translate(-10%, -70%);
        color: rgb(255, 255, 255);
        font-weight: bold;
        font-family:Georgia, Times, 'Times New Roman', serif;
        z-index: 2;
        line-height: 2em;
    }

    .back {
        padding: 0.4em 0.8em;
        border:1px solid;
        border-radius: 0.6em;
        font-family: 'Fira Sans', sans-serif;
        font-size: 0.8em;
        margin-bottom: 3%;
    }

    .form-control {
        padding: 1%;
        margin-left: 2em;
        width: 20rem;
        border:1px solid;
        border-radius: 20px;
    }

    .submit {
        margin-bottom: 0.1em;
        font-size: 0.8em;
        padding: 0.4em 0.8em;
        font-family: 'Fira Sans', sans-serif;
        border:1px solid ;
        border-radius: 0.6em;
    }

    .message{
        width: 30.8em;
        height: 7em;
        border:1px solid;
        border-radius: 20px;
        padding:0 10;
    }

    .text {
        display: block;
    }

    a{
        color:rgb(68, 0, 255);
        font-weight: bold;
    }

    @media only screen and (max-width: 908px) {
      section {
        font-size: 0.7rem;
      }
      nav {
       display: inline;
       height: 1.8em;
       font-size: 0.6em;
      }

      .headline {
        margin-top: -15%;
        height: 76%;
        text-align: center;
      }

      .description {
        margin: 2%;
      }

      .submit {
        margin-top: 1%;
        padding: 0.5em;
        font-size: 0.8rem;
      }

      .back {
        padding: 0.5em;
        font-size: 0.8rem;
        margin-top: 3%;
      }

      form {
        display: block;
        margin: 5%;
      }

      #name, #email, #message {
        width: 90%;
      }
    }
    </style>
      <title> Feedback </title>
    </head>
    <body>
        <header>
            <nav>
                <h3 id="logo">ANA MARIA || HORHOIANU</h3>
            </nav>
            <section>
                <div class="hero">
                    <img src="https://i.ibb.co/qy0TYyh/abstract.jpg" alt="planet">
                    <div class="headline">
                    <a href="https://ana-h-blog.netlify.app/"><button class="back">&larr; Back</button></a>
                    <h2 class="description"> Thank you for taking the time to provide your feedback.</h2>

                    <form name="feedback" method="POST" data-netlify="true">
                    <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name" required />
                    </div>
                    <div class="form-group">
                    <label id="email-label" for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required/>
                    </div>
                    <div class="form-group1">
                    <label class="text" for="message">Message</label>
                    <textarea class="message" name="comment" for="message" id="message"></textarea>
                    </div>
                    <input type="checkbox" id="tandc" name="tandc" value="TandC">
                    <label for="tandc" required> I agree to the <a href="#" >Terms and Conditions</a></label><br>
                
                    <div>
                    <button class="submit" type="submit">Send</button>
                    </div>
                  </form>
                </div>
                </div>
            </section>
        </header>
        <main>
            <div class="slider"></div>
        </main>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js" 
        integrity="sha512-DkPsH9LzNzZaZjCszwKrooKwgjArJDiEjA5tTgr3YX4E6TYv93ICS8T41yFHJnnSmGpnf0Mvb5NhScYbwvhn2w==" 
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineMax.min.js" 
        integrity="sha512-0xrMWUXzEAc+VY7k48pWd5YT6ig03p4KARKxs4Bqxb9atrcn2fV41fWs+YXTKb8lD2sbPAmZMjKENiyzM/Gagw==" 
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <script>
          const hero = document.querySelector(".hero");
          const tl = new TimelineMax();

          tl.fromTo(hero, 0.8, { height: "0%" }, {height: '85%', ease: Power2.easeInOut })
          .fromTo(hero, 0.5, {width: "100%"}, {width: "85%"});
      </script>
    </body>
</html>
